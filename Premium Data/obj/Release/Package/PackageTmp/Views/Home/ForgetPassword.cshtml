
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Wachtwoord vergeten</title>
    
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
   
    <link href="~/Content/animate.css" rel="stylesheet" />
    
    <link href="~/Content/style.css" rel="stylesheet" />
</head>
<body class="gray-bg">

    <div class="passwordBox animated fadeInDown">
        <div class="row">

            <div class="col-md-12">
                <div class="ibox-content">

                    <h2 class="font-bold">Wachtwoord vergeten</h2>

                    <p>
                        Voer hier uw e-mailadres en een nieuw wachtwoord wordt u per e-mail toegezonden.
                    </p>

                    <div class="row">

                        <div class="col-lg-12">
                            <form class="m-t" method="post" action="@Url.Action("ForgetPassword","Home")">
                                @if (@ViewBag.error != null)
                                {
                                    <div class="alert alert-danger alert-dismissable">
                                        <button aria-hidden="true" data-dismiss="alert" class="close" type="button">×</button>
                                        @ViewBag.mailError
                                    </div>
                                }
                                <div class="form-group">
                                    <input type="email" class="form-control" name="email" placeholder="E-mailadres" autocomplete="off" required="">
                                </div>

                                <button type="submit" class="btn btn-outline btn-success block full-width m-b">Klik hier om het wachtwoord te resetten</button>

                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <hr />
        <div class="row">
        </div>
    </div>

</body>
</html>
