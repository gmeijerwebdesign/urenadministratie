
@{
    ViewBag.Title = "ChangePassword";
}

<div class="passwordBox animated fadeInDown">
    <div class="row">

        <div class="col-md-12">
            <div class="ibox-content">

                <h2 class="font-bold">Wachtwoord wijzigen</h2>

                <p>
                    Voer hieronder uw huidige en het door u gewenste nieuwe wachtwoord in.
                </p>

                <div class="row">

                    <div class="col-lg-12">
                        <form class="m-t" method="post" action="@Url.Action("ChangePassword","Home")">
                            <div class="form-group">
                                <input type="password" class="form-control" name="oldpassword" placeholder="Huidige wachtwoord" required>
                            </div>
                            <div class="form-group">
                                <input type="password" class="form-control" name="newpassword" placeholder="Nieuw wachtwoord" required>
                            </div>
                            

                            <button type="submit" class="btn btn-outline btn-success block full-width m-b">Klik hier om het wachtwoord te wijzigen</button>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <hr />
  
</div>

